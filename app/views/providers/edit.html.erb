<h1>Editing provider</h1>

<% form_for(@provider) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :endpoint %><br />
    <%= f.text_field :endpoint %>
  </p>
  <p>
    <%= f.label :metadata_prefix %><br />
    <%= f.select :metadata_prefix, @provider.metadata_formats.map { |x| [x.namespace, x.prefix ] } rescue f.text_field :metadata_prefix %>
  </p>
  <p>
    <%= f.label :set %><br />
    <%= f.select :set, @provider.sets.map { |x| [x.name, x.spec] } rescue f.text_field :set%> 
  </p>
  <p>
    <%= f.label :last_consumed_at %><br />
    <%= f.text_field :last_consumed_at %>
  </p>
  <p>
    <%= f.label :interval %><br />
    <%= f.text_field :interval %>
  </p>
  <p>
    <%= f.label :stylesheet %><br />
    <%= f.text_field :stylesheet %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @provider %> |
<%= link_to 'Back', providers_path %>
